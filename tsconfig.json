{
  "compilerOptions": {
    // Ensure that .d.ts files are created by tsc, but not .js files
    "baseUrl": ".",
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*"],
}
